---
import type { IFrontmatter } from 'astro-boilerplate-components';

import { BlogPost } from '@/partials/BlogPost';
import { CTA } from '@/partials/CTA';
import BaseEnglish from '@/templates/BaseEnglish.astro';
import { AppConfig } from '@/utils/AppConfig';
import { ProjectsFooterEnglish } from '@/partials/ProjectsFooterEnglish';

export interface Props {
  content: IFrontmatter;
}

const { content } = Astro.props as Props;
const title = `${content.title} - ${AppConfig.site_name}`;
---

<BaseEnglish head={{ title, description: content.description }}>
  <BlogPost frontmatter={content}>
    <slot></slot>
  </BlogPost>

<ProjectsFooterEnglish> </ProjectsFooterEnglish>
</Base>
